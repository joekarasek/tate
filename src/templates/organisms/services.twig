<section id="section-services">
    <div class="heading">
        <div class="container">
            <h2>Services We Offer</h2>
            <p>Select a service below for more information. Remember, prevention is always better than treatment, so if itâ€™s been a while since your child has seen a dentist, please give us a call or click to <a href="#" data-toggle="modal" data-target="#requestAppointmentForm">request&nbsp;an&nbsp;appointment</a>.</p>
        </div>
    </div>

    <div class="container">
        <div class="pyramid-list">
            {% for service in services %}
                {% if loop.index == 1 or loop.index == 4 or loop.index == 7 or loop.index == 10 or loop.index == 12 %}
                    {% set color='green' %}
                {% elseif loop.index == 3 or loop.index == 6 or loop.index == 9 %}
                    {% set color='blue' %}
                {% elseif loop.index == 2 or loop.index == 5 or loop.index == 8 or loop.index == 11 %}
                    {% set color='red' %}
                {% endif %}


            <div class="pyramid-list__item">
                <img src="assets/service_arrow--{{ color }}.png" alt="{{ color }}arrow icon">
                <a href="#" data-toggle="modal" data-target="#service--{{ service.modalTarget }}" class="pyramid-list__link">{{ service.title }}</a>
            </div>
            {% endfor %}
        </div>
    </div>

    <img src="assets/services-large.jpg" alt="Happy kids with great smiles">

</section>