<div class="team-carousel">

    <div class="heading">
        <h4 class="heading__title">Click a team member to read more</h4>
    </div>
    <div class="team-carousel__carousel">
        <div class="container">
            <div class="team-carousel--wrapper">
                <div class="owl-carousel js-team-carousel">
                    {% for person in team %}
                        {% if person.carousel %}
                            <div class="team-card team-card--{{ person.name }}">
                                <a href="#" data-toggle="modal" data-target="#team-modal{{ person.modalTarget }}">
                                    <div class="team-card__image" style="background-image: url('/assets/team/{{ person.image }}')"></div>
                                    <div class="team-card__text">
                                        <h5 class="team-card__title">{{ person.name }}</h5>
                                        <h6 class="team-card__sub">{{ person.title }}</h6>
                                    </div>
                                </a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    {% include 'molecules/team__modals.twig' %}
</div>
